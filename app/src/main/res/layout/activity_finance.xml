<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground">


    <LinearLayout
        android:id="@+id/headerGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/expenseEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Entry Form"
            android:textSize="35sp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/expenceImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/track_expence"
            android:layout_marginTop="30dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/nameGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/headerGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/expenseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Name:"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editExpenseName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Ex. name"
            android:textSize="20sp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/amountGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/nameGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/amountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editAmount"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Ex.amount"
            android:textSize="20sp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/categoryGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/amountGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editCategory"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Ex.Category"
            android:textSize="20sp"
            android:textColorHint="@color/hintText"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_expense"
        android:layout_marginBottom="100dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/btnBackGround"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>